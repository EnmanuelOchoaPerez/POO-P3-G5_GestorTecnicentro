<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Título superior con fondo azul -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#3F51B5"
        android:padding="16dp"
        android:text="Gestor Tecnicentro"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botones con mismo tamaño -->
    <Button
        android:id="@+id/adClientes"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:onClick="mostrarAdministrarClientes"
        android:text="Administrar Clientes"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/adTecnicos"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="mostrarAdministrarTecnicos"
        android:text="Administrar Tecnicos"
        app:layout_constraintTop_toBottomOf="@id/adClientes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/adProveedores"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="mostrarAdministrarProveedores"
        android:text="Administrar Proveedores"
        app:layout_constraintTop_toBottomOf="@id/adTecnicos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/gfa"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="abrirFacturas"
        android:text="Generar facturas a empresas"
        app:layout_constraintTop_toBottomOf="@id/adProveedores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/ris"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="mostrarReporteSerivicios"
        android:text="Reporte de ingresos por servicios"
        app:layout_constraintTop_toBottomOf="@id/gfa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/rat"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="mostrarReporteTecnicos"
        android:text="Reporte de atenciones por tecnico"
        app:layout_constraintTop_toBottomOf="@id/ris"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:onClick="salir"
        android:text="Salir"
        app:layout_constraintTop_toBottomOf="@id/rat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
